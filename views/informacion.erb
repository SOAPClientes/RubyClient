<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WS Service Cliente Ruby - Información</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Arial', sans-serif;
    }
    h1 {
      margin: 20px 0;
      color: #343a40;
    }
    .container {
      margin-top: 50px;
      text-align: center;
    }
    #venn {
      width: 100%;
      max-width: 600px;
      margin: 0 auto;
    }
    .venn-circle text {
      font-size: 14px;
      fill: #343a40;
    }
    .tooltip {
      position: absolute;
      text-align: center;
      width: 100px;
      height: 28px;
      padding: 2px;
      font: 12px sans-serif;
      background: lightsteelblue;
      border: 0px;
      border-radius: 8px;
      pointer-events: none;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Información</h1>
    <div id="venn"></div>
    <a href="/" class="btn btn-custom mt-3">Volver</a>
  </div>
  
  <script src="https://d3js.org/d3.v5.min.js"></script>
  <script src="https://benfred.github.io/venn.js/venn.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const datos = ["<%= @datos[0] %>", "<%= @datos[1] %>", "<%= @datos[2] %>", "<%= @datos[3] %>", "<%= @datos[4] %>"];

      const sets = [
        { sets: ['Curso'], size: parseInt(datos[2]), label: `Curso: ${datos[0]} (${datos[1]})` },
        { sets: ['Aprobados'], size: parseInt(datos[3]), label: `Aprobados: ${datos[3]}` },
        { sets: ['Desaprobados'], size: parseInt(datos[4]), label: `Desaprobados: ${datos[4]}` },
        { sets: ['Curso', 'Aprobados'], size: parseInt(datos[3]) },
        { sets: ['Curso', 'Desaprobados'], size: parseInt(datos[4]) }
      ];

      const chart = venn.VennDiagram()
        .width(600)
        .height(400);
        
      const div = d3.select("#venn")
        .datum(sets)
        .call(chart);

      const tooltip = d3.select("body").append("div")
        .attr("class", "tooltip")
        .style("opacity", 0);

      div.selectAll("path")
        .style("stroke-opacity", 0)
        .style("stroke", "#fff")
        .style("stroke-width", 0);

      div.selectAll("g")
        .on("mouseover", function(d, i) {
          venn.sortAreas(div, d);

          tooltip.transition().duration(200).style("opacity", .9);
          tooltip.text(d.label)
            .style("left", (d3.event.pageX) + "px")
            .style("top", (d3.event.pageY - 28) + "px");

          const selection = d3.select(this).transition("tooltip").duration(200);
          selection.select("path")
            .style("stroke-width", 3)
            .style("fill-opacity", .4)
            .style("stroke-opacity", 1);
        })
        .on("mousemove", function() {
          tooltip.style("left", (d3.event.pageX) + "px")
            .style("top", (d3.event.pageY - 28) + "px");
        })
        .on("mouseout", function(d, i) {
          tooltip.transition().duration(200).style("opacity", 0);

          const selection = d3.select(this).transition("tooltip").duration(200);
          selection.select("path")
            .style("stroke-width", 0)
            .style("fill-opacity", .25)
            .style("stroke-opacity", 0);
        });

      div.selectAll("text")
        .style("fill", "#343a40")
        .style("font-size", "16px")
        .style("text-anchor", "middle");
    });
  </script>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
